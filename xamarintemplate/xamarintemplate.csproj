<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageType>Template</PackageType>
        <PackageId>IntelliAbb.Xamarin.Template</PackageId>
        <Title>IntelliAbb Xamarin Template</Title>
        <Authors>Hussain Abbasi</Authors>
        <Description>This is a starter template for an enterprise grade Xamarin application. The template follows MVVM best practices and offers the following capabilities out of the box. This tempelate uses Prism, cache, network resiliency (Polly) and styles ready to accelerate your Xamarin.Forms application.</Description>
        <PackageIconUrl>https://intelliabbdotcom.files.wordpress.com/2022/08/image-1.png</PackageIconUrl>
        <PackageTags>iOS Android Prism MVVM</PackageTags>
        <TargetFramework>netstandard2.1</TargetFramework>
        <Copyright>Â© $([System.DateTime]::Now.Year) intelliAbb</Copyright>
        <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <DefaultLanguage>en-US</DefaultLanguage>
        <PackageProjectUrl>https://github.com/Intelliabb/xamarintemplate</PackageProjectUrl>
        <ProjectType>git</ProjectType>
        <VersionPrefix>1.0.0</VersionPrefix>
        <VersionSuffix>$(VersionSuffix)</VersionSuffix>
        <Product>$(AssemblyName) ($(TargetFramework))</Product>
        
        <IncludeContentInPack>true</IncludeContentInPack>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <ContentTargetFolders>content</ContentTargetFolders>
    </PropertyGroup>
    
    <ItemGroup>
        <Content Include="Template\**\*" Exclude="Template\**\bin\**;Template\**\obj\**;" />
        <Compile Remove="**\*" />
    </ItemGroup>
</Project>
